<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="_04_Click_Detection_App.MainWindow"
        Title="ClickSense">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="AmplitudeTextBox" Width="200" Height="30" IsReadOnly="True" />
        <Button Content="Start" Width="100" Height="30" Click="OnStartButtonClick" Margin="0,10,0,0" />
        <Button Content="Stop" Width="100" Height="30" Click="OnStopButtonClick" Margin="0,10,0,0" />
    </StackPanel>

</Window>
